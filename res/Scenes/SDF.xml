</sdf-primitive>

<sdf-primitive name="sphere1">
  <name type="string">SDFSphere</name>
  <position type="vec3">1,0,0</position>
  <radius type="float">1</radius>
</sdf-primitive>

<sdf-primitive name="sphere2">
  <name type="string">SDFSphere</name>
